{
    "layer": "top",
    "margin": "10px 5px 0px 5px",
    "position": "top",
    "modules-left": [
        "custom/launcher",
        // "custom/previous",
        // "custom/media",
        // "custom/next",
        "hyprland/submap",
        "hyprland/window"
    ],
    "modules-center": [
        "custom/special-workspace",
        "hyprland/workspaces"
    ],
    "modules-right": [
        "tray",
        "idle_inhibitor",
        "pulseaudio",
        "backlight",
        "cpu",
        "memory",
        "power-profiles-daemon",
        "battery",
        "clock"
    ],
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },
    "custom/special-workspace": {
        "format": "  ",
        "tooltip": false,
        "on-click": "hyprctl dispatch togglespecialworkspace spotify; pidof spotify || spotify"
    },
    "hyprland/window": {
        "icon": true
    },
    "hyprland/submap": {
        "on-scroll-up": "hyprctl dispatch submap reset",
        "on-scroll-down": "hyprctl dispatch submap reset",
        "tooltip": false
    },
    "hyprland/workspaces": {
        "format": "{name}",
        "on-click": "activate",
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "smooth-scrolling-threshold": 3,
        "format-icons": {
            "default": ""
        },
        "sort-by-number": true
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "",
            "performance": "",
            "balanced": " ",
            "power-saver": " "
        }
    },
    "pulseaudio": {
        "tooltip": false,
        "scroll-step": 5,
        "format": "{icon} {volume}%",
        "format-muted": " {volume}%",
        "on-click": "pkill pwvucontrol || pwvucontrol",
        "on-scroll-up": "wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 2%+",
        "on-scroll-down": "wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 2%-",
        "format-icons": {
            "default": [
                "",
                "",
                ""
            ]
        }
    },
    "backlight": {
        "tooltip": false,
        "format": " {}%",
        "interval": 1,
        "on-scroll-up": "brightnessctl set 2%+",
        "on-scroll-down": "brightnessctl set 2%-"
    },
    "battery": {
        "interval": 5,
        "states": {
            "good": 100,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}  {capacity}%",
        "format-charging": " {capacity}%",
        "format-plugged": " {capacity}%",
        "format-alt": "{power} W",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "clock": {
        "format": "{:%H:%M:%S}",
        "format-alt": "{:%Y-%m-%d}",
        "interval": 1
    },
    "cpu": {
        "interval": 5,
        "format": " {usage}%",
        "max-length": 10
    },
    "memory": {
        "interval": 20,
        "format": " {}%",
        "max-length": 10
    },
    "custom/launcher": {
        "format": " ",
        "tooltip": true,
        "tooltip-format": "Open application launcher",
        "on-click": "pkill wofi || wofi --conf ~/$DOTDIR/.config/wofi/config --style ~/$DOTDIR/.config/wofi/style.css"
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 5,
        "format-icons": {
            "spotify": "",
            "default": "󰝚"
        },
        "escape": true,
        "exec": "waybar-mediaplayer 2> /dev/null",
        "on-click": "playerctl play-pause"
    },
    "custom/previous": {
        "format": "󰒮",
        "return-type": "json",
        "exec": "waybar-mediaplayer 2> /dev/null",
        "on-click": "playerctl previous"
    },
    "custom/next": {
        "format": "󰒭",
        "return-type": "json",
        "exec": "waybar-mediaplayer 2> /dev/null",
        "on-click": "playerctl next"
    }
}
